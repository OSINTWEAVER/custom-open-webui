general_settings:
  # Disable telemetry and analytics
  disable_spend_logs: true
  disable_reset_budget: true
  
  # Master key for API access
  master_key: ${LITELLM_MASTER_KEY}
  
  # Database settings
  database_url: sqlite:///app/config/litellm.db
  
  # Logging
  set_verbose: false
  
  # Security
  enforce_user_param: true
  
  # Rate limiting
  rpm_limit: 100
  tpm_limit: 10000

litellm_settings:
  # Privacy settings
  telemetry: false
  success_callback: []
  failure_callback: []
  
  # Cache settings - using Redis for better OSINT data persistence
  cache: true
  cache_params:
    type: "redis"
    host: "open-webui-redis"
    port: 6379
    ttl: 3600  # 1 hour cache for OSINT data
    
  # Timeout settings
  request_timeout: 600
  
  # Drop params that might contain sensitive data
  drop_params: true
